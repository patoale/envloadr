{
  "name": "envloadr",
  "version": "0.0.0",
  "description": "Simplifies the process of loading environment variables from files",
  "bin": {
    "envloadr": "bin/cli.js"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint src test",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky",
    "test": "jest",
    "test:coverage:export": "pnpm test --coverage --coverageReporters=lcovonly",
    "test:coverage:print": "pnpm test --coverage --coverageReporters=text",
    "ts:check": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.23.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.13",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.5",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "ts-jest": "29.3.0",
    "tsc-alias": "1.8.11",
    "typescript": "5.8.2",
    "typescript-eslint": "8.28.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patoale/envloadr.git"
  },
  "keywords": [
    "env",
    "environment",
    "vars",
    "variables",
    "files",
    ".env",
    "cli",
    "command-line",
    "config"
  ],
  "author": "Alejandro Pato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patoale/envloadr/issues"
  },
  "homepage": "https://github.com/patoale/envloadr#readme",
  "packageManager": "pnpm@10.6.5"
}